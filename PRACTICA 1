        }
        .grid-header { grid-area: header; }
        .grid-sidebar { grid-area: sidebar; background: #f4f4f4; padding: 1rem; }
        .grid-main { grid-area: main; background: #ddd; padding: 1rem; }
        .grid-aside { grid-area: aside; background: #f4f4f4; padding: 1rem; }
