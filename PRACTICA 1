<body>
    <!-- 1. Layout de una sola columna -->
    <div class="layout single-column">
        <h1>Layout de Una Sola Columna</h1>
        <p>Común en blogs y artículos.</p>
    </div>

    <!-- 2. Layout de dos columnas -->
    <div class="layout split-screen">
        <div class="left" style="background: #eee;">Izquierda</div>
        <div class="right" style="background: #ddd;">Derecha</div>
    </div>

    <!-- 3. Layout de tres columnas -->
    <div class="layout grid-layout">
        <header class="grid-header">Encabezado</header>
        <aside class="grid-sidebar">Izquierda</aside>
        <main class="grid-main">Centro</main>
        <aside class="grid-aside">Derecha</aside>
        <footer class="grid-footer">Pie de Página</footer>
    </div>

    <!-- 4. Layout con encabezado ancho completo -->
    <div class="layout hero-section">
        <h1>Hero Section</h1>
        <p>Se usa en páginas de inicio.</p>
    </div>

    <!-- 5. Layout en tarjetas -->
    <div class="layout card-layout">
        <div class="card">Tarjeta 1</div>
        <div class="card">Tarjeta 2</div>
        <div class="card">Tarjeta 3</div>
    </div>

    <!-- 6. Layout tipo galería -->
    <div class="layout gallery-layout">
        <div>Imagen 1</div>
        <div>Imagen 2</div>
        <div>Imagen 3</div>
        <div>Imagen 4</div>
    </div>

    <!-- 7. Layout en cuadrícula flexible -->
    <div class="layout grid-layout">
        <div style="background: #eee; padding: 1rem;">Elemento 1</div>
        <div style="background: #ddd; padding: 1rem;">Elemento 2</div>
    </div>

    <!-- 8. Layout con navegación lateral -->
    <div class="layout content">
        <aside class="sidebar">Menú</aside>
        <main class="main">Contenido</main>
    </div>

    <!-- 9. Layout con imagen destacada -->
    <div class="layout hero-section">
        <img src="https://via.placeholder.com/800x300" alt="Imagen Destacada" style="width: 100%;">
        <h2>Título Importante</h2>
    </div>

    <!-- 10. Layout tipo tabla -->
    <div class="layout">
        <table border="1" width="100%">
            <tr>
                <th>Columna 1</th>
                <th>Columna 2</th>
                <th>Columna 3</th>
