<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD MVC con MySQL</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- CSS personalizado -->
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-4">ğŸ“ Gestor de Tareas</h1>
    
    <!-- Formulario para agregar tareas -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <form action="/tasks" method="POST">
          <div class="row g-3">
            <div class="col-md-5">
              <input type="text" name="title" class="form-control" placeholder="TÃ­tulo" required>
            </div>
            <div class="col-md-5">
              <input type="text" name="description" class="form-control" placeholder="DescripciÃ³n" required>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100">
                Agregar
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Lista de tareas -->
    <% if (tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title"><%= task.title %></h5>
                <p class="card-text text-muted"><%= task.description %></p>
                <small class="text-muted">Creado: <%= new Date(task.created_at).toLocaleString() %></small>
              </div>
              <div class="btn-group">
                <a href="/tasks/edit/<%= task.id %>" class="btn btn-sm btn-outline-warning">Editar</a>
                <a href="/tasks/delete/<%= task.id %>" class="btn btn-sm btn-outline-danger">Eliminar</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-info text-center">
        No hay tareas registradas. Â¡Agrega una!
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>